@inherits LayoutComponentBase
@* Required *@
<MudThemeProvider @bind-IsDarkMode="_darkModeEnabled"/>
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        X3-Code :: Tools
        <MudSpacer />
        <MudIconButton Icon="@(_darkModeEnabled ? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode)" OnClick="@((e) => _darkModeEnabled = !_darkModeEnabled)" />
    </MudAppBar>
    <MudDrawer ClipMode="DrawerClipMode.Docked" Elevation="2" @bind-Open="@_drawerOpen">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    private bool _darkModeEnabled = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}